<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Purple/Gold application theme. -->
    <style name="Theme.PurpleGold" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/deep_purple_300</item>
        <item name="colorPrimaryVariant">@color/deep_purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/yellow_200</item>
        <item name="colorSecondaryVariant">@color/yellow_500</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:actionMenuTextColor">@color/white</item>
        <item name="android:textColor">@color/grey_200</item>
        <!-- Chat Message colors. -->
        <item name="colorDetail">@color/purple_200</item>
        <item name="colorOnDetail">@color/black</item>
        <item name="colorMessage">@color/purple_200</item>
        <item name="colorOnMessage">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/grey_1000</item>
        <item name="colorOnBackground">@color/grey_200</item>
        <item name="colorOnAppBar">@color/black</item>
        <item name="colorTabBackground">@color/grey_900</item>
        <item name="colorSearchBar">@color/grey_600</item>
        <item name="colorSurface">@color/deep_purple_500</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorTinted">@color/grey_1000</item>
        <item name="colorOnTinted">@color/grey_200</item>
        <item name="android:spinnerDropDownItemStyle">@style/SpinnerItem</item>
    </style>
