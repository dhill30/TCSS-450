<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Purple/Gold application theme. -->
    <style name="Theme.PurpleGold" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/deep_purple_200</item>
        <item name="colorPrimaryVariant">@color/deep_purple_500</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/yellow_200</item>
        <item name="colorSecondaryVariant">@color/yellow_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:actionMenuTextColor">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <!-- Customize your theme here. -->
        <item name="colorSearchBar">@color/grey_700</item>
        <item name="colorDetail">@color/purple_900</item>
        <item name="colorOnDetail">@color/white</item>
        <item name="colorSurface">@color/grey_900</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorPrimarySurface">@color/purple_900</item>
        <item name="colorOnPrimarySurface">@color/white</item>
        <item name="android:spinnerDropDownItemStyle">@style/SpinnerItem</item>
    </style>
